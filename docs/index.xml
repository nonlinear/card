      <pubDate>Wed, 28 Jun 2023 00:00:00 +0000</pubDate>
      <guid>http://localhost:1313/card/video-scroll/</guid>
      <description>&lt;style&gt;&#xA;  html {&#xA;    scroll-behavior: smooth;&#xA;  }&#xA;&#xA;  #video {&#xA;    position: fixed;&#xA;    height: 100vh;&#xA;  }&#xA;  .scroll-dummy {&#xA;    height: 3000px;&#xA;    max-width: 998px;&#xA;    padding: 20px;&#xA;    z-index: 1;&#xA;  }&#xA;&lt;/style&gt;&#xA;&lt;/head&gt;&#xA;&lt;body&gt;&#xA;  &lt;!-- partial:index.partial.html --&gt;&#xA;  &lt;!-- Ref https://www.reddit.com/r/javascript/comments/dolagh/apple_airpods_pro_page_uses_a_lot_of_images_so_i/ --&gt;&#xA;  &lt;div class=&#34;scroll-dummy&#34;&gt;&#xA;    &lt;video id=&#34;video&#34; width=&#34;300&#34;&gt;&#xA;      &lt;source src=&#34;http://localhost:1313/card/images/video.mp4&#34; type=&#34;video/mp4&#34;&gt;&#xA;      &lt;/video&gt;&#xA;    &lt;/div&gt;&#xA;    &lt;script&gt;&#xA;      var FRAMES = 148;&#xA;      var FPS = 30;&#xA;      var video = document.getElementById(&#39;video&#39;);&#xA;&#xA;      window.addEventListener(&#39;scroll&#39;, function (e) {&#xA;        var time = (window.scrollY / 1000) * FRAMES / FPS;&#xA;        video.currentTime = time;&#xA;        console.log(time);&#xA;      });&#xA;&#xA;      window.addEventListener(&#39;load&#39;, function(e) {&#xA;        video.pause();&#xA;        video.currentTime = 0;&#xA;      });&#xA;    &lt;/script&gt;</description>
